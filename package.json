{
  "name": "lamus-shell",
  "version": "0.0.1",
  "description": "Lamus Computer User Shell",
  "main": "./dist/main.bundle.js",
  "scripts": {
    "start": "electron ./dist/main.bundle.js",
    "dev": "rimraf dist && cross-env NODE_ENV=development webpack --watch --progress --color",
    "prod": "rimraf dist && cross-env NODE_ENV=production webpack --progress --color",
    "test": "mocha -r ts-node/register -r tsconfig-paths/register \"test/**/*.ts\"",
    "build:win": "electron-builder build --win --x64",
    "build:linux": "electron-builder build --linux --armv7l"
  },
  "build": {
    "appId": "com.janstarzak.lamus-shell",
    "productName": "Lamus Computer User Shell",
    "directories": {
      "app": "./dist/",
      "output": "./out/"
    },
    "win": {
      "target": "nsis",
      "asar": true
    },
    "linux": {
      "target": "AppImage"
    },
    "nsis": {
      "oneClick": false,
      "allowToChangeInstallationDirectory": true
    },
    "buildVersion": "1"
  },
  "author": "Jan Starzak <jan.starzak@gmail.com>",
  "license": "MIT",
  "dependencies": {
    "@lamus/qbasic-vm": "file:../qb.js",
    "@monaco-editor/react": "^4.4.4",
    "monaco-editor": "^0.33.0",
    "react": "^17.0.1",
    "react-dom": "^17.0.1",
    "react-i18next": "^11.12.0",
    "react-router": "^5.2.0",
    "react-router-dom": "^5.2.0",
    "tslib": "^2.3.1"
  },
  "devDependencies": {
    "@sofie-automation/code-standard-preset": "^0.4.2",
    "@types/mocha": "^8.2.0",
    "@types/react": "^17.0.0",
    "@types/react-dom": "^17.0.0",
    "@types/react-router": "^5.1.8",
    "@types/react-router-dom": "^5.1.6",
    "@typescript-eslint/eslint-plugin": "^4.11.0",
    "@typescript-eslint/parser": "^4.11.0",
    "copy-webpack-plugin": "^7.0.0",
    "cross-env": "^7.0.3",
    "css-loader": "^5.0.1",
    "electron": "^11.1.1",
    "electron-builder": "^22.9.1",
    "eslint": "^7.16.0",
    "eslint-config-airbnb": "^18.2.1",
    "eslint-import-resolver-webpack": "^0.13.0",
    "eslint-plugin-import": "^2.22.1",
    "eslint-plugin-jsx-a11y": "^6.4.1",
    "eslint-plugin-react": "^7.21.5",
    "eslint-plugin-react-hooks": "^4.2.0",
    "file-loader": "^6.2.0",
    "html-webpack-plugin": "^4.5.0",
    "lodash": "^4.17.20",
    "mocha": "^8.2.1",
    "monaco-editor-webpack-plugin": "^7.0.1",
    "rimraf": "^3.0.2",
    "source-map-loader": "^2.0.0",
    "spectron": "^13.0.0",
    "style-loader": "^2.0.0",
    "ts-loader": "^8.0.12",
    "ts-node": "^9.1.1",
    "tsconfig-paths": "^3.9.0",
    "typescript": "^4.4.4",
    "webpack": "^5.11.0",
    "webpack-cli": "^4.3.0",
    "webpack-livereload-plugin": "^3.0.2"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/jstarpl/lamus-shell"
  },
  "keywords": [
    "fantasy-computer"
  ],
  "bugs": {
    "url": "https://github.com/jstarpl/lamus-shell/issues"
  },
  "homepage": "https://github.com/jstarpl/lamus-shell#readme",
  "prettier": {
    "endOfLine": "crlf",
    "trailingComma": "es5",
    "semi": false,
    "useTabs": true
  }
}
